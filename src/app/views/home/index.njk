{% extends "layout.njk" %}

{% block content %}

<section class="shop container">
    <h2>Ultimos Produtos </h2>

    <div class="item">
        {% for product in products %}
        <div class="product">
            <div class="image"
                style="background:url({{product.img if product.img else '//placehold.it/500x500?text=Produto sem image'}})">
                
        
                {% if product.oldPrice != product.price %} 
                    <div class="old-price" >
                        {{product.oldPrice}} 
                    </div>
                
                {% endif %}
                
                <p>{{product.price}}</p>
                <h4>{{product.name}}</h4>

                <a href="/products/{{product.id}}" class="buttom"> Ver o Produto</a>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

{%endblock%}