<div class="item">
    <div>E-mail</div>
    <div>
        <input 
        type="email"
        name="email"
        attr="E-mail" 
        placeholder="Digite seu E-mail " 
        value="{{user.email}} "
        onblur="validate.apply(this, 'isEmail')" />
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div>
        <input 
        type="password" 
        name="password" 
        attr="Senha" 
        placeholder="Digite sua senha" />
    </div>
</div>
