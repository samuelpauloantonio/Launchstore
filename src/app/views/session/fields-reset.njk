<div class="item">
    <div>E-mail</div>
    <div>
        <input type="email" name="email" attr="E-mail" placeholder="Digite seu E-mail " value="{{user.email}} "
            onblur="validate.apply(this, 'isEmail')" />
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div>
        <input type="password" name="password" attr="Senha" placeholder="Digite sua senha">
    </div>
</div>

<div class="item">
    <div>Repita a sua senha</div>
    <div>
        <input type="password" name="passwordRepeat" attr="Senha" placeholder="Repita a nova  Senha">
    </div>
</div>


<input type="hidden" name="token" value="{{token}}">
