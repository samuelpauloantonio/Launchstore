{% extends "layout.njk" %}

{% block content %}

<section class="password container form ">

    <form action="/users/forgot-password" method="post">

        <div class="header">
            <h3>Esqueceu a senha?</h3>
        </div>


        <div class="fields">
            <div class="item">
                <div>E-mail</div>
                <div>
                    <input type="email" name="email" attr="E-mail" placeholder="Digite seu E-mail "
                        value="{{user.email}} " onblur="validate.apply(this, 'isEmail')" />
                </div>
            </div>
        </div>

        <button class="button" type="submit">Recuperar Senha</button>
    </form>

</section>

{% endblock %}