{% extends "layout.njk" %}

{% import 'parts/card.njk' as cards  %}

{% block content %}

{% call cards.render('Meus An√∫cios ', 'users-ads container' )  %}

<div class="items">

    {% for product in products %}

    <div class="item">
    

        <img src="{{product.img}}"  alt="product.name">


        <div class="info">

            <div class="title"> {{product.name}} </div>
            <div class="price "> {{product.formattedPrice}} </div>
            <div class="published"> Publicado em : {{product.formattedCreatedAt}} </div>


            <div class="actions">
                <a href="/products/{{product.id}}/edit">Editar</a>
                <a href="/products/{{product.id}}">Ver</a>
            </div>
        </div>


    </div>

    {% endfor %}
</div>

{%endcall%}

{% endblock content %}