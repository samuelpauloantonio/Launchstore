{% extends "layout.njk"%}

{% block content %}

<section class="product-single container">

    <div class="gallery">

        <div class="highlight">
            {%if not files[0] %}
            <img src="{{files[0].src}}" 
            alt="{{files[0].name}}"
            >

            {% else %}
            <img src="{{files[0].src}}"
             alt="{{files[0].name}}"
             onclick = "animationZoomImage.open()"
             >
            {% endif %}

            <div class="lightbox-target">
                <div class="modal-center">
                    <img src="{{files[0].src}}" alt="{{files[0].name}}">
                 <a href="#" class="lightboxClose"
                onclick = "animationZoomImage.close()"
                 >
                    <i class="material-icons">close</i>
                </a>
                </div>
            </div><!--lightbox-target-->
        </div><!--highlight-->

        <div class="gallery-preview">
            {%for image in files %}
            <img src="{{image.src}}" 
            alt="{{image.name}}"
             {%if loop.index0 == 0 %}
                 class="active"
              {% endif %}
              onclick = "imageGallery.setImage(event)"
              >
            <!--menu active if loop.index0 do nunjucks -->
            {% endfor %}
        </div>
    </div>

    <div class="info">
        <h1>{{product.name}}</h1>

        <div class="published">
            Plublicado em {{product.published.day}} Ã s {{product.published.hour}}
        </div>

        <div class="description">
            {{product.description}}
        </div>

        <div class="price-buy">
            <div class="price">
                {{product.price}}

                {% if  product.price !== product.old_price %}
                <span class="old_price"> AKZ 89 </span>

                {% endif %}
            </div>

            <div class="buy">
                {% if product.status == 0 %}
                <p class="unavailable">Indisponivel</p>
                {% elseif product.quantity == 0 %}
                <p class="unavailable">Fora de Estoque</p>
                {% else %}
                <button class="button">Comprar</button>

                {% endif %}
            </div>
        </div>
    </div>
</section>




{% endblock %}